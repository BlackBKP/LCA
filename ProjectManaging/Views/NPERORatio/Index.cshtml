<!-- Normal Per OT Ratio Index -->
<div class="container-fluid" style="padding-top:10px">

    <div class="card card-dark">
        <div class="card-header">
            <span>Normal/OT Ratio</span>
        </div>
        <div class="card-body">
            <canvas id="chart_pie" style="height:400px"></canvas>
        </div>
    </div>

</div>

@section Scripts
{
    <script type="text/javascript">
        var ctx = document.getElementById('chart_pie').getContext('2d');
        var chart = new Chart(ctx, {
            type: 'doughnut',
            data: {
                labels: ['Data 1', 'Data 2'],
                datasets: [{
                    data: [200, 40],
                    backgroundColor: [
                        'rgba(255, 0, 0,0.5)',
                        'rgba(0, 255, 0,0.5)'
                    ],
                }]
            },
            options: {
                maintainAspectRatio: false,
                tooltips: {
                    callbacks: {
                        label: function (tooltipItem, data) {
                            return data.labels[tooltipItem.index] + ': ' + parseInt((data.datasets[0].data[tooltipItem.index]/240)*100) + ' %';
                        }
                    }
                }
            }
        });
    </script>
}