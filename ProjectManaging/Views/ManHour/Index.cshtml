<!-- Man Per Hour Index -->
@{
    ViewData["Title"] = "Man Power";
}
<div class="container-fluid" style="padding-top:10px">
    <div class="info-box bg-dark">
        <div class="info-box-content">
            <h3 class="info-box-text">MANPOWER</h3>
        </div>
    </div>
    <div id="projects"></div>
</div>

@section Scripts
{
    <script type="text/javascript">
        var months = [" ", "JAN", "FEB", "MAR", "APR", "MAY", "JUN", "JUL", "AUG", "SEP", "OCT", "NOV", "DEC"];
        $(document).ready(function () {
            GetData();
        });

        async function GetData() {
            await $.ajax({
                type: "GET",
                url: '@Url.Action("GetData", "ManHour")',
	            contentType: 'application/x-www-form-urlencoded',
                data: {

                },
                success: function (response) {
                    console.log("Response");
                    console.log(response);
                    GenManPowerChart(response);
                }
            });
        }

        function GenManPowerChart(data) {
            $('#projects').empty();
            for (var i = 0; i < data.length; i++) {
                var job_year = data[i][0].job_id.substring(0, 3);
                var job_number = data[i][0].job_id.substring(4, data[i][0].job_id.length);
                var job_id = job_year + '-' + job_number.padStart(4, '0');

                var str = '<div class="card card-dark"><div class="card-header"><span class="card-title">' + job_id + '</span></div>';
                str += '<div class="card-body"><canvas id="' + job_id + '" style="height:400px"></canvas></div></div>';
                $('#projects').append(str);

                var weeks = [];
                var normal = [];
                var ot_1_5 = [];
                var ot_3 = [];
                var acc_hour = [];
                for (var j = 0; j < data[i].length; j++) {
                    var week = months[data[i][j].month] + ' ' + data[i][j].week + ' ' + data[i][j].year;
                    weeks.push(week);
                    normal.push(data[i][j].normal);
                    ot_1_5.push(data[i][j].ot_1_5);
                    ot_3.push(data[i][j].ot_3);
                    acc_hour.push(data[i][j].acc_hour);
                }

                var ctx = document.getElementById(job_id).getContext('2d');
                var myChart = new Chart(ctx, {
                    type: 'bar',
                    data: {
                        labels: weeks,
                        datasets: [
                            {
                                type: 'bar',
                                label: 'Normal',
                                data: normal,
                                borderColor: 'rgba(27, 79, 144,1)',
                                backgroundColor: 'rgba(27, 79, 144,0.75)',
                                borderWidth: 1
                            },
                            {
                                type: 'bar',
                                label: 'Overtime 1.5',
                                data: ot_1_5,
                                backgroundColor: 'rgba(33, 97, 140, 0.75)',
                                borderColor: 'rgba(33, 97, 140, 1)',
                                borderWidth: 1
                            },
                            {
                                type: 'bar',
                                label: 'Overtime 3.0',
                                data: ot_3,
                                backgroundColor: 'rgba(46, 134, 193, 0.75)',
                                borderColor: 'rgba(46, 134, 193, 1)',
                                borderWidth: 1
                            },
                            {
                                type: 'line',
                                label: 'Total (Accumulation)',
                                data: acc_hour,
                                backgroundColor: 'rgba(133, 193, 233, 0.75)',
                                borderColor: 'rgba(133, 193, 233, 1)',
                            }
                        ]
                    },
                    options: {
                        scales: {
                            yAxes: {
                                ticks: {
                                    beginAtZero: true
                                },
                                stacked: true
                            },
                            xAxes: {
                                stacked: true
                            }
                        },
                        maintainAspectRatio: false
                    }
                });

            }
        }

    </script>
}