<!-- Modal Import Overtimes -->

@{ 
    Layout = null;
}

<div id="modal_import_overtimes" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    Import Overtimes
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-row">
                        <label for="select_ots_job_number">Job Number</label>
                        <select id="select_ots_job_number" class="form-control">
                            <option>J21-0001</option>
                            <option>J21-0001</option>
                            <option>J21-0001</option>
                            <option>J21-0001</option>
                            <option>J21-0001</option>
                        </select>
                    </div>
                    <br />
                    <div class="form-row">
                        <label>Select Year</label>
                        <select id="select_ots_year" class="form-control">
                            <option>2021</option>
                            <option>2020</option>
                            <option>2019</option>
                        </select>
                    </div>
                    <br />
                    <div class="form-row">
                        <label>Select Month</label>
                        <select id="select_ots_month" class="form-control">
                            <option>JAN 1</option>
                            <option>JAN 2</option>
                            <option>FEB 1</option>
                        </select>
                    </div>
                    <br />
                    <div class="form-row">
                        <label>
                            Select File
                        </label>
                        <input id="input_modal_ots_file" class="form-control-file" type="file" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>