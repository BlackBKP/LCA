<!-- Login Index -->
@model ProjectManaging.Models.LoginModel
@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta http-equiv="x-ua-compatible" content="ie=edge" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body style="width:100vw;height:100vh">
    <div class="container-fluid d-flex justify-content-center">

        <form role="form" asp-action="Login" asp-controller="Login" method="post" style="width:500px;background-color:cadetblue">

            <div class="form-group">
                <label>Username</label>
                <input id="username" type="text" name="username" asp-for="username" autocomplete="on" />
            </div>
            
            <div class="form-group">
                <label>Password</label>
                <input id="password" type="password" name="password" asp-for="password" />
            </div>
            
            <div class="form-group">
                <input type="submit" value="Login" />
            </div>
            
        </form>

    </div>
</body>
</html>
