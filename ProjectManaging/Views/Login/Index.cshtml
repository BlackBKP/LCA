<!-- Login Index -->
@model ProjectManaging.Models.LoginModel
@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta http-equiv="x-ua-compatible" content="ie=edge" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body style="width:100vw;height:100vh">
    <div class="container-fluid d-flex justify-content-center" style="padding-top:10vh">
        <div class="row justify-content-center">

            <div class="card elevation-4" style="height:600px;vertical-align:middle">
                <div class="card-body">
                    <form role="form" asp-action="Login" asp-controller="Login" method="post" style="width:500px">

                        <br /><br />

                        <div class="form-group">
                            <h1>Labor Cost Analysis</h1>
                        </div>

                        <br /><br />

                        <div class="form-group">
                            <label for="username">Username</label>
                            <input id="username" class="form-control" type="text" name="username" asp-for="username" autocomplete="on" />
                        </div>

                        <br /><br />

                        <div class="form-group">
                            <label for="password">Password</label>
                            <input id="password" class="form-control" type="password" name="password" asp-for="password" />
                        </div>

                        <br /><br /><br /><br />

                        <div class="form-group">
                            <input type="submit" class="form-control btn-primary" value="Login" />
                        </div>

                    </form>
                </div>
                
            </div>
            
        </div>
    </div>
</body>
</html>
